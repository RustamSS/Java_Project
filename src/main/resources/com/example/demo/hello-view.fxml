<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.ToDoListController">
   <children>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="600.0">
         <children>
            <TextField fx:id="taskTextField" prefHeight="26.0" prefWidth="400.0" promptText="Введите новую задачу" />
            <Button mnemonicParsing="false" onAction="#addTask" text="Добавить" />
         </children>
      </HBox>
      <ListView fx:id="taskList" prefHeight="275.0" prefWidth="600.0" />
      <HBox alignment="CENTER" prefHeight="75.0" prefWidth="600.0">
         <children>
            <Button mnemonicParsing="false" onAction="#deleteTask" text="Удалить" />
            <Button mnemonicParsing="false" onAction="#editTask" text="Редактировать" />
         </children>
      </HBox>
   </children>
</VBox>
